{
  "name": "valvedataformat",
  "displayName": "Valve Data Format (VDF)",
  "description": "A language server for Valve Data Format (VDF), also called KeyValues. VDF is a data format used in the Source Engine.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:valvedataformat.helloWorld"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vdf.unescaped",
        "aliases": [
          "VDF (unescaped)",
          "VDF",
          "Valve Data Format",
          "KeyValues"
        ],
        "extensions": [
          ".vdf"
        ]
      }
    ],
    "grammars": [
      {
        "language": "vdf.unescaped",
        "scopeName": "source.vdf.unescaped",
        "path": "./syntaxes/vdf.unescaped.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "valvedataformat.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
