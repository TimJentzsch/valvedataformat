{
  "name": "valvedataformat",
  "displayName": "Valve Data Format (VDF)",
  "description": "A language server for Valve Data Format (VDF), also called KeyValues. VDF is a data format used in the Source Engine.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vdf.unescaped"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vdf.unescaped",
        "aliases": [
          "VDF (unescaped)",
          "VDF",
          "Valve Data Format",
          "KeyValues"
        ],
        "extensions": [
          ".vdf"
        ]
      }
    ],
    "grammars": [
      {
        "language": "vdf.unescaped",
        "scopeName": "source.vdf.unescaped",
        "path": "./syntaxes/vdf.unescaped.tmGrammar.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "yarn run compile && yarn run lint",
    "postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
    "lint": "eslint client/src --ext ts && eslint server/src --ext ts",
    "test-server": "jest ./server/src",
    "test": "yarn run test-server"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^27.0.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
